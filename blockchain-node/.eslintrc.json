{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "semi": [
        "error",
        "always"
    ],
    "no-unused-vars": 1,
    "no-console": 0,
    "eol-last": 0,
    "no-case-declarations": 0,
    "space-before-function-paren": 0,
    "no-trailing-spaces": 0,
    "keyword-spacing": 0,
    "padded-blocks": 0
  }
}
